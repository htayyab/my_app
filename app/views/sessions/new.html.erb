<h1 class="text-center font-bold text-4xl mb-6">Log In</h1>

<div class="max-w-md mx-auto bg-white p-8 rounded-lg shadow-lg">
<!-- Flash Error Message -->

  <%= form_with(url: login_path, method: :post, class: "space-y-5") do |form| %>

    <!-- Email Field -->
    <div class="form-group">
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, name: "session[email]", class: "block w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm placeholder-gray-400", placeholder: "Email Address" %>
    </div>

    <!-- Password Field -->
    <div class="form-group">
      <%= form.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, name: "session[password]", class: "block w-full px-4 py-2 mt-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-transparent text-sm placeholder-gray-400", placeholder: "Password" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit "Log In", class: "w-full px-4 py-2 mt-4 bg-blue-600 text-white rounded-md hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500 font-semibold" %>
    </div>

    <!-- Forgot Password Link -->
    <div class="text-center">
      <a href="#" class="text-sm text-blue-600 hover:underline">Forgot Password?</a>
    </div>

  <% end %>
</div>
